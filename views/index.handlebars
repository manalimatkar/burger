<div class="container text-center">
  <h1>Burgers!</h1>
  <div class="row">
    <div class="col-md-6"  id="noteaten">
      <h2>Burgers On Menu!!</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li> <h3>{{this.id}}.{{this.burger_name}}</h3>
              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="btn btn-default">Devourer!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6" id="eaten">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>{{this.id}}.{{this.burger_name}}</li>      
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">    
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
</div>
